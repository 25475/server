datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}


// Enums para los tipos de productos
enum ProductType {
  VIZION
  NOVATEK
}

// Enum para categorías de planes
enum PlanCategory {
  HOGAR
  GAMER
  EMPRESARIAL
}

// Modelo para categorías
model Category {
  id        String   @id @default(uuid())
  name      String
  slug      String   @unique
  description String?
  productType ProductType
  imageUrl  String?
  status    String   @default("activo")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  products   Product[]

  @@map("categories")
}

// Modelo para productos
model Product {
  id          String   @id @default(uuid())
  name        String
  slug        String   @unique
  description String
  price       Float?
  imageUrl    String?
  features    Json?    // Para almacenar características específicas del producto
  stock       Int?     @default(0)
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id])
  productType ProductType
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("products")
}

// Modelo para planes
model Plan {
  id          String       @id @default(uuid())
  name        String
  description String
  price       Float
  imageUrl    String?
  features    String[]     // Array de características del plan
  category    PlanCategory @default(HOGAR)
  isPopular   Boolean      @default(false)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@map("plans")
}

// Modelo para usuarios administradores
model Admin {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  role      String   @default("admin")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("admins")
}

// Modelo para órdenes de compra
model Order {
  id          String      @id @default(uuid())
  customerName String
  customerEmail String
  customerPhone String?
  address     String
  reference   String?
  total       Float
  status      String      @default("PENDING")
  paymentMethod String?
  transactionId String?
  items       OrderItem[]
  pdfUrl      String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@map("orders")
}

model OrderItem {
  id        String  @id @default(uuid())
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id])
  productId String
  productName String
  price     Float
  quantity  Int

  @@map("order_items")
}

// Enum para estados de órdenes del frontend
enum EstadoOrden {
  APROBADA
  PENDIENTE
  RECHAZADA
}

// Modelo para órdenes generadas desde el frontend
model Orden {
  id            String      @id @default(uuid())
  orderId       String?     @unique // Formato: ORD-00001, ORD-00002, etc. (opcional inicialmente para migración)
  nombreCliente String
  telefono      String
  productos     Json
  total         Float
  pdfUrl        String
  fecha         DateTime    @default(now())
  createdAt     DateTime    @default(now()) // Timestamp automático
  estado        EstadoOrden @default(PENDIENTE)

  @@map("ordenes")
}

// Modelo para links de interés en el footer
model InterestLink {
  id        String   @id @default(cuid())
  title     String   // Texto visible para el usuario
  url       String   // URL real del link
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("interest_links")
}

// Enums para carruseles de imágenes
enum CarouselSection {
  PRINCIPAL
  NOSOTROS
  PLANES
  VISION
  NOVATEK
  DOMOTICA
}

enum CarouselType {
  INTERNET
  VIZION
  DOMOTICA
  NOVATEK
}

// Modelo para imágenes de carruseles
model CarouselImage {
  id        String           @id @default(uuid())
  section   CarouselSection
  type      CarouselType?    // Solo para PRINCIPAL, null para otras secciones
  url       String           // URL de la imagen (generada por IA después)
  order     Int              // Orden de display en el carrusel (1, 2, 3, 4...)
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt

  @@index([section])
  @@index([section, order])
  @@map("carousel_images")
}

// Modelo para videos de secciones
model Video {
  id          String   @id @default(uuid())
  url         String
  section     String
  title       String?
  description String?
  status      String   @default("activo")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([section])
  @@map("videos")
}
